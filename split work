import math

#promts users to input 15 numbers
num_input = input('Please enter 15 numbers ')

#splits input into a list
num_input = num_input.split()
num_input = [int(number) for number in num_input]

#asks for a number between 1 and 10
divisible = int(input('Plase enter a number between 1 and 10 '))

#finds out which numbers are pefectly divisible my the second number inputted
for numbers in num_input:
  if numbers%divisible != 0:
    num_input.remove(numbers)

#gives users the sum of the new list
print('The numbers in which are divisible by ' + str(divisible) + ' are: ' + str(num_input))
sum_of_list = int(sum(num_input))
print('The sum of these numbers is ' + str(sum_of_list))

#finds the square root of the sum
square_root = int(math.sqrt(sum_of_list))
round(square_root)
print('The square root of ' + str(sum_of_list) + ' is ' + str(square_root))

#tells users whether the square root was in the list or not
if square_root not in num_input: 
    print('The square root was not apart of the list of numbers')
elif square_root in num_input: 
    print('The square root was in the list of numbers!')
else:
    print('Not an option')
